# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hr_platform?schema=public"

# JWT
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-refresh-secret-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS (for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=hr-platform-files
S3_SIGNED_URL_EXPIRY=3600
